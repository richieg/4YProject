$(document).ready( function () {
    var table=$('#categorytable').DataTable();
    getCatData(0);
    getUserForCourses();
    getCourseNamesForCourses();
    
    
    
    function drawDataTable(columns, data) {
        var oTable = $('#datatable-sample').DataTable({
          
                "aoColumnDefs": columns,
                "aaData": data
        });
        
    }
    /*var columns = [{
        "sTitle": "No.",
